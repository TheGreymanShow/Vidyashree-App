<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theGreymanShow.vidyashree.ContactUs"
    android:fillViewport="false"
    android:id="@+id/scrool">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel"
        android:background="#eeeeee">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/contact2"
        android:id="@+id/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Us"
            android:id="@+id/textView5"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Office :"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="022 - 65646441"
            android:id="@+id/textView10"
            android:textColor="#212121"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignEnd="@+id/textView5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Now"
            android:id="@+id/button"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:onClick="onClick"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mobile 1 :"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+91 9158564444"
            android:id="@+id/textView12"
            android:textColor="#212121"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignStart="@+id/textView10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Now"
            android:id="@+id/button2"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/button"
            android:onClick="onClick"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mobile 2 :"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/phone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+91 9702804229"
            android:id="@+id/textView14"
            android:textColor="#212121"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignStart="@+id/textView12" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Now"
            android:id="@+id/button3"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView13"
            android:layout_alignStart="@+id/button2"
            android:onClick="onClick"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewa"
            android:src="@drawable/contact4"
            android:layout_below="@+id/imageView4"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/mail"
            android:layout_below="@+id/imageViewa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="info@vidyashreeclasses.com"
            android:id="@+id/textView15"
            android:textColor="#212121"
            android:layout_below="@+id/imageViewa"
            android:layout_alignStart="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="info@vidyashreeclasses.com"
            android:id="@+id/textView16"
            android:textColor="#212121"
            android:layout_below="@+id/textView15"
            android:layout_alignStart="@+id/textView14"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewb"
            android:src="@drawable/contact5"
            android:layout_below="@+id/imageView5" />


    </RelativeLayout>


</ScrollView>
